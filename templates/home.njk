{% extends "base.njk" %}

{% block title %}Home{% endblock title %}

{% block body %}
<a href="/users">Users</a>
<a href="/logout">Logout</a>

<form action="/shout" method="POST">
    <input name="_csrf" type="hidden" value={{csrfToken}}>
    <input type="text" name="shout_body" placeholder="Shout to the world!"></text>
    <button type="submit">Shout!</button>
</form>

<section>
    {% for post in posts %}
    <article>
        {{post.body}} - {{post.name}}
    </article>
    {% endfor %}
</section>

{% endblock body %}
